<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="default_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_font_size</item>
    </style>

    <style name="default_date_time_text_style" parent="default_text_style">
        <item name="android:background">@color/clear</item>
    </style>

    <style name="adapter_texts" parent="default_text_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="adapter_texts_small" parent="adapter_texts">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_font_size_small</item>
    </style>

</resources>
